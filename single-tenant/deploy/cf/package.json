{
  "name": "ai",
  "version": "0.0.1",
  "repository": "https://github.com/sap-samples/btp-cap-multitenant-ai",
  "license": "Apache License 2.0",
  "description": "AI",
  "scripts": {
    "---BUILD---": "",
    "build": "npm run install && npm run build:cds && npm run build:ts && npm run cleanup:ts && npm run build:ui",
    "install": "npm i --prefix ../../code/api && npm i --prefix ../../code/ui",
    "build:ts": "tsc -p ../../code/api",
    "build:cds": "npx -p @sap/cds-dk cds build -in ../../code/api --profile production",
    "build:ui": "npm run build --prefix ../../code/ui",
    "cleanup:ts": "npx shx rm -r '../../code/api/gen/**/*.{ts,tsconfig}'",
    "---DEPLOY---": "",
    "build:mbt": "mbt build -p=cf -t=./mta_archives --mtar=genai.mtar",
    "deploy": "cf deploy mta_archives/genai.mtar",
    "build:deploy": "npm run build && npm run build:mbt && npm run deploy"
  }
}
