@xsuaaHostname = <<uaa.url - field from Service Binding>>
@btpXsuaaClient = <<uaa.clientid - field from Service Binding>>
@btpXsuaaSecret = <<uaa.clientsecret - field from Service Binding>>
@apiEndpointBtp = <<apiUrl (!not uaa.apiUrl!) - field from Service Binding>>


##########################################
# Get SAP XSUAA token 
##########################################

# @name getXsuaaToken

POST {{xsuaaHostname}}/oauth/token
Accept: application/json
Content-Type: application/x-www-form-urlencoded
Authorization: Basic {{btpXsuaaClient}}:{{btpXsuaaSecret}}

client_id={{btpXsuaaClient}}
&client_secret={{btpXsuaaSecret}}
&grant_type=client_credentials


##########################################
# Call CAP endpoint (BTP)
##########################################

@access_token = {{getXsuaaToken.response.body.$.access_token}}

# @name uploadRecyclingMaterialsBtp
