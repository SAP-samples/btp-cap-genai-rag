{
  "name": "aisaas",
  "version": "0.0.1",
  "repository": "https://github.com/sap-samples/btp-cap-multitenant-ai",
  "license": "Apache License 2.0",
  "description": "AI SaaS",
  "scripts": {
    "build": "npm run install && npm run build:cds && npm run build:ts && npm run cleanup:ts1 && npm run cleanup:ts2",
    "install": "npm install --include=dev --prefix ../../code --build-from-source",
    "build:cds": "npx -p @sap/cds-dk@7 cds build -in ../../code --profile production",
    "build:ts": "tsc -p ../../code/srv/srv && tsc -p ../../code/api/srv",
    "cleanup:ts1": "npx rimraf ../../code/gen/**/**/*.ts && npx rimraf ../../code/gen/**/**/**/*.ts",
    "cleanup:ts2": "npx rimraf ../../code/gen/**/**/**/**/*.ts && npx rimraf ../../code/gen/**/**/tsconfig.json",
    "------------------------": "",
    "-Helm Default Scripts-": "",
    "/----------------------/": "",
    "helm:install:aisaas": "helm install aisaas ./charts -n dev",
    "helm:upgrade:aisaas": "helm upgrade aisaas ./charts -n dev",
    "helm:uninstall:aisaas": "helm uninstall aisaas -n dev",
    "--------------------------": "",
    "-Container Build Scripts-": "",
    "--- RUN LIKE npx --yes cross-env IMAGE_PREFIX=sap-demo npm run build:all ---": "",
    "/------------------------/": "",
    "build:all": "npm run build:srv && npm run build:db-com && npm run build:router  && npm run build:api && npm run build:broker",
    "build:srv": "cross-env-shell pack build $IMAGE_PREFIX/aisaas-srv --path ../../code/gen/srv --builder paketobuildpacks/builder:base --buildpack gcr.io/paketo-buildpacks/nodejs -e BP_LAUNCHPOINT=./node_modules/@sap/cds/bin/cds-serve.js",
    "build:db-com": "cross-env-shell pack build $IMAGE_PREFIX/aisaas-db-com --path ../../code/gen/db-com --builder paketobuildpacks/builder:base --buildpack gcr.io/paketo-buildpacks/nodejs -e BP_LAUNCHPOINT=./node_modules/@sap/hdi-deploy/deploy.js",
    "build:api": "cross-env-shell pack build $IMAGE_PREFIX/aisaas-api --path ../../code/gen/api --builder paketobuildpacks/builder:base --buildpack gcr.io/paketo-buildpacks/nodejs -e BP_LAUNCHPOINT=./node_modules/@sap/cds/bin/cds-serve.js",
    "build:broker": "cross-env-shell pack build $IMAGE_PREFIX/aisaas-broker --path ../../code/broker --builder paketobuildpacks/builder:base --buildpack gcr.io/paketo-buildpacks/nodejs -e BP_LAUNCHPOINT=./start.js",
    "build:router": "cross-env-shell docker build -t $IMAGE_PREFIX/aisaas-router ../../code/router",
    "---------------------------": "",
    "-Container Push Scripts-": "",
    "--- RUN LIKE npx --yes cross-env IMAGE_PREFIX=sap-demo npm run push:all ---": "",
    "/-------------------------/": "",
    "push:all": "npm run push:srv && npm run push:db-com && npm run push:router && npm run push:html5-deployer && npm run push:api && npm run push:broker",
    "push:srv": "cross-env-shell docker push $IMAGE_PREFIX/aisaas-srv",
    "push:db-com": "cross-env-shell docker push $IMAGE_PREFIX/aisaas-db-com",
    "push:router": "cross-env-shell docker push $IMAGE_PREFIX/aisaas-router",
    "push:api": "cross-env-shell docker push $IMAGE_PREFIX/aisaas-api",
    "push:broker": "cross-env-shell docker push $IMAGE_PREFIX/aisaas-broker"
  }
}
