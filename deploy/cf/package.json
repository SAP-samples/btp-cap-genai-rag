{
  "name": "aisaas",
  "version": "0.0.1",
  "repository": "https://github.com/sap-samples/btp-cap-multitenant-ai",
  "license": "Apache License 2.0",
  "description": "AI SaaS",
  "scripts": {
    "---BUILD---": "",
    "build": "npm run build:cds && npm run build:ts && npm run cleanup:ts1 && npm run cleanup:ts2",
    "build:ts": "tsc -p ../../code/app-service && tsc -p ../../code/api-service",
    "build:cds": "npx -p @sap/cds-dk@7 cds build -in ../../code --profile production",
    "cleanup:ts1": "npx rimraf ../../code/gen/**/**/*.ts && npx rimraf ../../code/gen/**/**/**/*.ts",
    "cleanup:ts2": "npx rimraf ../../code/gen/**/**/**/**/*.ts && npx rimraf ../../code/gen/**/**/tsconfig.json",
    "---DEPLOY---": "",
    "build:mbt": "mbt build -p=cf -t=./mta_archives --mtar=saas-genai.mtar",
    "build:mbt:private": "mbt build -p=cf -t=./mta_archives --mtar=saas-genai.mtar -e ./mtaext/tfe-private.mtaext",
    "deploy": "cf deploy mta_archives/saas-genai.mtar -e ./mtaext/free-tier.mtaext",
    "deploy:private": "cf deploy mta_archives/saas-genai.mtar -e ./mtaext/tfe-private.mtaext",
    "build:deploy:private": "npm run build && npm run build:mbt:private && npm run deploy:private"
  }
}
