{
  "name": "btp-cap-genai-rag",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "https://github.com/SAP-samples/btp-cap-genai-rag",
  "license": "Apache License 2.0",
  "scripts": {
    "---BUILD---": "",
    "build": "npm run install && npm run build:cds && npm run build:ts && npm run cleanup:ts && npm run uninst",
    "install": "npm i --install-links --prefix ../../code",
    "build:ts": "tsc -p ../../code/tsconfig.json && tsc-alias -p ../../code/tsconfig.json",
    "build:cds": "npx -p @sap/cds-dk cds build -in ../../code --profile production",
    "cleanup:ts": "npx shx rm -r '../../code/gen/**/*.{ts,tsconfig}'",
    "uninst": "npm run uninst:app && npm run uninst:api",
    "uninst:app": "npm rm common-app common-api --prefix ../../code/gen/app --package-lock-only",
    "uninst:api": "npm rm common-app common-api --prefix ../../code/gen/api --package-lock-only",
    "---DEPLOY---": "",
    "build:mbt": "mbt build -p=cf -t=./mta_archives --mtar=aisaas.mtar",
    "deploy": "cf deploy mta_archives/aisaas.mtar -e ./mtaext/free-tier.mtaext",
    "build:deploy": "npm run build && npm run build:mbt && npm run deploy"
  }
}
