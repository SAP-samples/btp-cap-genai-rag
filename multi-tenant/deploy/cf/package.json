{
  "name": "btp-cap-genai-rag",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "https://github.com/SAP-samples/btp-cap-genai-rag",
  "license": "Apache License 2.0",
  "scripts": {
    "---BUILD---": "",
    "build": "npm run install && npm run build:cds && npm run build:ts && npm run cleanup:ts",
    "install": "npm i --prefix ../../code",
    "build:ts": "tsc -p ../../code/app-service && tsc -p ../../code/api-service",
    "build:cds": "npx -p @sap/cds-dk cds build -in ../../code --profile production",
    "cleanup:ts": "npx shx rm -r '../../code/gen/**/*.{ts,tsconfig}'",
    "---DEPLOY---": "",
    "build:mbt": "mbt build -p=cf -t=./mta_archives --mtar=aisaas.mtar",
    "deploy": "cf deploy mta_archives/aisaas.mtar -e ./mtaext/free-tier.mtaext",
    "build:deploy": "npm run build && npm run build:mbt && npm run deploy"
  }
}
