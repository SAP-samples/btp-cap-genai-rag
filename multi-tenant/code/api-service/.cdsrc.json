{
    "folders": {
        "app": "../app",
        "db-sqlite": "../db/sqlite"
    },
    "requires": {
        "PROVIDER_AI_CORE_DESTINATION": {
            "kind": "rest",
            "credentials": {
                "destination": "PROVIDER_AI_CORE_DESTINATION"
            }
        },
        " ---------------------": "---",
        "--- MTXs Settings ----": "---",
        "--------------------- ": "---",
        "[hybrid]": {
            "multitenancy": true,
            "cds.xt.ExtensibilityService": false,
            "cds.xt.ModelProviderService": false,
            "cds.xt.DeploymentService": false,
            "cds.xt.SaasProvisioningService": false,
            "postgres": {
                "kind": "postgresql-db"
            }
        },
        "[local-with-mtx]": {
            "multitenancy": true,
            "extensibility": false,
            "toggles": false,
            "postgres": {
                "kind": "postgres",
                "credentials": {
                    "hostname": "localhost",
                    "port": 5432,
                    "username": "postgres",
                    "password": "postgres",
                    "dbname": "postgres"
                }
            }
        },
        "[development]": {
            "multitenancy": false,
            "postgres": {
                "kind": "postgres",
                "credentials": {
                    "hostname": "localhost",
                    "port": 5432,
                    "username": "postgres",
                    "password": "postgres",
                    "dbname": "postgres"
                }
            }
        },
        "------------------ ": "---",
        "--- DB Settings ---": "---",
        " ------------------": "---",
        "db": {
            "[hybrid]": {
                "kind": "hana",
                "impl": "@sap/cds-hana",
                "deploy-format": "hdbtable",
                "vcap": {
                    "label": "service-manager",
                    "plan": "container"
                }
            },
            "[local-with-mtx]": {
                "kind": "sqlite",
                "credentials": {
                    "url": "../db.sqlite"
                },
                "beta": {
                    "sqlMigration": "true"
                }
            },
            "[development]": {
                "kind": "sqlite",
                "credentials": {
                    "url": "../db.sqlite"
                }
            }
        },
        "-------------------- ": "---",
        "--- Auth Settings ---": "---",
        " --------------------": "---",
        "auth": {
            "[hybrid]": {
                "kind": "xsuaa"
            },
            "[bas]": {
                "kind": "basic",
                "users": {
                    "alice": {
                        "tenant": "t1",
                        "roles": ["Admin", "Member", "cds.Subscriber"]
                    },
                    "bob": {
                        "roles": ["Member"]
                    }
                }
            },
            "[local-with-mtx]": {
                "kind": "basic",
                "users": {
                    "alice": {
                        "tenant": "t1",
                        "roles": ["Admin", "Member", "cds.Subscriber"]
                    },
                    "bob": {
                        "tenant": "t1",
                        "roles": ["Member"]
                    }
                }
            },
            "[development]": {
                "kind": "basic",
                "users": {
                    "alice": {
                        "roles": ["Admin", "Member"]
                    },
                    "carol": {
                        "roles": ["Member"]
                    }
                }
            }
        } 
    }
}
