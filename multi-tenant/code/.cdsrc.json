{
    "folders": {
        "db-sqlite": "db/sqlite"
    },
    "requires": {
        "PROVIDER_AI_CORE_DESTINATION_HUB": {
            "kind": "rest",
            "credentials": {
                "destination": "PROVIDER_AI_CORE_DESTINATION_HUB"
            }
        },
        "SUBSCRIBER_OFFICE365_DESTINATION": {
            "kind": "rest",
            "credentials": {
                "destination": "SUBSCRIBER_OFFICE365_DESTINATION"
            }
        },
        "aicore": {
            "createResourceGroups": true
        },
        " ---------------------": "---",
        "--- MTXs Settings ----": "---",
        "--------------------- ": "---",
        "[production]": {
            "multitenancy": true,
            "toggles": true,
            "extensibility": true,
            "cds.xt.ExtensibilityService": {
                "element-prefix": [
                    "x_"
                ],
                "extension-allowlist": [
                    {
                        "for": [
                            "*"
                        ]
                    }
                ]
            },
            "postgres": {
                "kind": "postgresql-db"
            },
            "hana": {
                "kind": "hana-cloud",
                "vcap": {
                    "name": "hana",
                    "tags": ["hana"],
                    "plan": "hdi-shared",
                    "label": "hana"
                }
            }
        },
        "[hybrid-app]": {
            "multitenancy": true,
            "extensibility": true,
            "toggles": false,
            "cds.xt.ExtensibilityService": {
                "element-prefix": ["x_"],
                "extension-allowlist": [
                    {
                        "for": ["*"]
                    }
                ]
            },
            "postgres": {
                "kind": "postgresql-db"
            }
        },
        "[hybrid-api]": {
            "multitenancy": true,
            "cds.xt.ExtensibilityService": false,
            "cds.xt.ModelProviderService": false,
            "cds.xt.DeploymentService": false,
            "cds.xt.SaasProvisioningService": false,
            "postgres": {
                "kind": "postgresql-db"
            }
        },
        "[bas]": {
            "multitenancy": false,
            "extensibility": false,
            "toggles": false,
            "postgres": {
                "kind": "postgresql-db"
            }
        },
        "[local-with-mtx]": {
            "multitenancy": true,
            "extensibility": false,
            "toggles": false,
            "postgres": {
                "kind": "postgres",
                "credentials": {
                    "hostname": "localhost",
                    "port": 5432,
                    "username": "postgres",
                    "password": "postgres",
                    "dbname": "postgres"
                }
            }
        },
        "[development]": {
            "multitenancy": false,
            "extensibility": false,
            "toggles": false,
            "postgres": {
                "kind": "postgres",
                "credentials": {
                    "hostname": "localhost",
                    "port": 5432,
                    "username": "postgres",
                    "password": "postgres",
                    "dbname": "postgres"
                }
            }
        },
        "------------------ ": "---",
        "--- DB Settings ---": "---",
        " ------------------": "---",
        "db": {
            "[production]": {
                "kind": "hana", 
                "impl": "@sap/cds-hana",
                "deploy-format": "hdbtable",
                "vcap": {
                    "label": "service-manager",
                    "plan": "container"
                }
            },
            "[hybrid-app]": {
                "kind": "hana",
                "impl": "@sap/cds-hana",
                "deploy-format": "hdbtable",
                "vcap": {
                    "label": "service-manager",
                    "plan": "container"
                }
            },
            "[hybrid-api]": {
                "kind": "hana",
                "impl": "@sap/cds-hana",
                "deploy-format": "hdbtable",
                "vcap": {
                    "label": "service-manager",
                    "plan": "container"
                }
            },
            "[bas]": {
                "kind": "sqlite",
                "credentials": {
                    "url": "db.sqlite"
                }
            },
            "[local-with-mtx]": {
                "kind": "sqlite",
                "credentials": {
                    "url": "db.sqlite"
                }
            },
            "[development]": {
                "kind": "sqlite",
                "credentials": {
                    "url": "db.sqlite"
                }
            }
        },
        "-------------------- ": "---",
        "--- Auth Settings ---": "---",
        " --------------------": "---",
        "auth": {
            "[production]": {
                "kind": "xsuaa"
            },
            "[hybrid-app]": {
                "kind": "xsuaa"
            },
            "[hybrid-api]": {
                "kind": "xsuaa"
            },
            "[bas]": {
                "kind": "basic",
                "users": {
                    "alice": {
                        "roles": ["Admin", "cds.Subscriber"]
                    },
                    "bob": {
                        "roles": ["Member"]
                    },
                    "system-user": {
                        "roles": ["system-user"]
                    }
                }
            },
            "[local-with-mtx]": {
                "kind": "basic",
                "users": {
                    "alice": {
                        "tenant": "t1",
                        "roles": ["Admin", "cds.Subscriber"]
                    },
                    "bob": {
                        "tenant": "t1",
                        "roles": ["Member"]
                    },
                    "system-user": {
                        "tenant": "t1",
                        "roles": ["system-user"]
                    }
                }
            },
            "[development]": {
                "kind": "basic",
                "users": {
                    "alice": {
                        "roles": ["Admin"]
                    },
                    "carol": {
                        "roles": ["Member"]
                    },
                    "system-user": {
                        "roles": ["system-user"]
                    }
                }
            }
        }
    }
}
