<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:tnt="sap.tnt"
   xmlns:core="sap.ui.core"
   core:require="{ formatter: 'aisaas/ui/model/formatter' }">
    <HBox class="sapUiSmallMargin" justifyContent="SpaceBetween">
        <HBox justifyContent="Center">
            <Avatar
                displaySize="M"
                backgroundColor="Accent6"
                initials="{path:'mail/sender', formatter:'formatter.getAvatarInitial'}"/>
        </HBox>
        <VBox width="calc(100% - 5rem)">
            <HBox>
                <Label text="{i18n>email.list.label.similarity}" showColon="true"/>
                <ObjectStatus
                    class="sapUiTinyMarginBegin"
                    text="{path:'similarity', formatter:'formatter.getFormattedSimilarity'}%"
                    state="Information"/>
            </HBox>
            <HBox class="sapUiTinyMarginTop" justifyContent="SpaceBetween">
                <Label text="{mail/sender}" wrapping="true"/>
            </HBox>
            <HBox class="sapUiTinyMarginTop" justifyContent="SpaceBetween">
                <tnt:InfoLabel displayOnly="true" text="{mail/category}"/>
            </HBox>
            <HBox class="sapUiTinyMarginTop" justifyContent="SpaceBetween">
                <VBox width="calc(100% - 1.5rem)">
                    <Title text="{mail/subject}"/>
                    <Text maxLines="2" text="{mail/body}"/>
                </VBox>
            </HBox>
        </VBox>
    </HBox>
</core:FragmentDefinition>